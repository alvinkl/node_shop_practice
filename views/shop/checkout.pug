extends ../layouts/layout

block content
  .row
    .col-sm-6.col-md-4.col-md-offset-4.col-sm-offset-3
      h1 Checkout
      h4 Your Total: $ #{ total }
      #charge-error.alert.alert-danger.hidden
        
      form(action='/', method='post', id='checkout-form')
        .row
          col-xs-12
            .form-group
              label(for='name') Name
              input(type='text', id='name', required).form-control
          col-xs-12
            .form-group
              label(for='address') Address
              input(type='text', id='address', required).form-control
          col-xs-12
            .form-group
              label(for='card-name') Card Holder Name
              input(type='text', id='card-name', required).form-control
          col-xs-12
            .form-group
              label(for='card-number') Credit Card Number
              input(type='text', id='card-number', required).form-control
          col-xs-12
            .row
              .col-xs-6
                .form-group
                  label(for='card-expiry-month') Expiration Month
                  input(type='text', id='card-expiry-month', required).form-control
              .col-xs-6
                .form-group
                  label(for='card-expiry-year') Expiration Year
                  input(type='text', id='card-expiry-year', required).form-control
          col-xs-12
            .form-group
              label(for='card-cvc') CVC
              input(type='text', id='card-cvc', required).form-control
          button(type='submit').btn.btn-success Buy now  
  script(type='text/javascript', src='https://js.stripe.com/v2/')
  script(type='text/javascript', src='javascripts/checkout.js')
